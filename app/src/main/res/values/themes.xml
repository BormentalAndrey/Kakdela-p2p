<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.KakdelaP2P" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/neon_cyan</item>
        <item name="colorOnPrimary">@color/background_dark</item>
        <item name="colorSecondary">@color/neon_pink</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Фон -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Неоновый эффект для кнопок и акцентов -->
        <item name="colorPrimaryContainer">@color/neon_blue</item>
        <item name="colorOnPrimaryContainer">@color/black</item>

        <!-- Статус-бар и навигация -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
