<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Современная тема Material3 без устаревших атрибутов -->
    <style name="Base.Theme.Kakdela" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Новые имена атрибутов (вместо colorPrimaryVariant) -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Фон приложения — твой неоновый грид -->
        <item name="android:windowBackground">@drawable/neon_grid</item>
        
        <!-- Цвет статус-бара -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Основная тема приложения -->
    <style name="Theme.Kakdela" parent="Base.Theme.Kakdela" />
</resources>
