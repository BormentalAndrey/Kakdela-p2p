<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Современная тема Material3 2025 года (без устаревших атрибутов) -->
    <style name="Base.Theme.Kakdela" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Новые атрибуты вместо colorPrimary/colorSecondary -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/purple_700</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Твой неоновый фон -->
        <item name="android:windowBackground">@drawable/neon_grid</item>

        <!-- Прозрачный статус-бар -->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Kakdela" parent="Base.Theme.Kakdela" />
</resources>
