<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.KakdelaP2P" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/neon_cyan</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorPrimaryContainer">@color/neon_cyan</item>
        <item name="colorOnPrimaryContainer">#000000</item>

        <item name="colorSecondary">@color/neon_pink</item>
        <item name="colorOnSecondary">#000000</item>

        <item name="colorTertiary">@color/neon_purple</item>
        <item name="colorOnTertiary">#000000</item>

        <!-- Фон и поверхности -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Ошибки -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- Прозрачные бары + светлые иконки в статус-баре -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="29">false</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="29">false</item>
    </style>

</resources>
