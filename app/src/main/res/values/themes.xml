<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.KakdelaP2P" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Основные цвета (берём из colors.xml) -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorPrimaryContainer">@color/color_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/color_on_primary_container</item>

        <item name="colorSecondary">@color/neon_pink</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorSecondaryContainer">@color/neon_pink</item>
        <item name="colorOnSecondaryContainer">#000000</item>

        <item name="colorTertiary">@color/neon_purple</item>
        <item name="colorOnTertiary">#000000</item>

        <!-- Фон и текст -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Ошибки -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- Прозрачные бары + светлые иконки в статус-баре -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="29">false</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="29">false</item>
    </style>

</resources>
