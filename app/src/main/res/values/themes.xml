<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Главная тема — используем динамические цвета (рекомендация Google) -->
    <style name="Theme.KakdelaP2P" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        
        <!-- Прозрачные бары + светлые иконки в статус-баре (для светлой темы) -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        
        <!-- Отключаем принудительный контраст (чтобы прозрачность работала) -->
        <item name="android:enforceStatusBarContrast" tools:targetApi="29">false</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="29">false</item>
    </style>

</resources>
